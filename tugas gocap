<body>
  <button class="toggle-theme" onclick="toggleTheme()">ðŸŒ™ Mode Gelap</button>

  <div class="register-box">
    <h2>Form Registrasi</h2>

    <div class="progress-container"><div class="progress-bar" id="progressBar"></div></div>

    <form id="registerForm">
      <input type="text" id="nama" placeholder="Masukkan Nama" required>
      <input type="email" id="email" placeholder="Masukkan Email" required>
      <input type="date" id="tanggal" required>
      <input type="password" id="password" placeholder="Masukkan Password" required>

      <div>
        <label><input type="radio" name="gender" value="Laki-laki" required> Laki-laki</label>
        <label><input type="radio" name="gender" value="Wanita"> Wanita</label>
      </div>

      <div>
        <label><input type="checkbox" id="syarat" required> Setuju dengan syarat</label>
      </div>

      <button type="submit">Buat Akun</button>
    </form>

    <div class="quote-box" id="quoteBox"></div>
  </div>

  <div class="popup" id="popupMessage">Registrasi Berhasil!</div>

  <table id="dataTable">
    <thead>
      <tr>
        <th>Nama</th>
        <th>Email</th>
        <th>Tanggal Lahir</th>
        <th>Jenis Kelamin</th>
      </tr>
    </thead>
    <tbody>
    </tbody>
  </table>

  <script>
    const form = document.getElementById('registerForm');
    const tableBody = document.querySelector('#dataTable tbody');
    const progressBar = document.getElementById('progressBar');
    const popup = document.getElementById('popupMessage');
    const quoteBox = document.getElementById('quoteBox');

    const quotes = [
      "Setiap langkah kecil membawa kita lebih dekat pada tujuan.",
      "Berani mencoba, berarti setengah menang.",
      "Kegagalan adalah guru terbaik.",
      "Jangan menyerah sebelum berjuang maksimal.",
      "Konsistensi adalah kunci kesuksesan."
    ];

    // Tampilkan quote random
    quoteBox.textContent = quotes[Math.floor(Math.random() * quotes.length)];

    // Theme toggle
    function toggleTheme() {
      document.body.classList.toggle("dark");
    }

    // Progress bar update
    form.addEventListener('input', () => {
      const total = form.querySelectorAll('input').length;
      const filled = [...form.querySelectorAll('input')].filter(el => el.type !== "radio" && el.type !== "checkbox" ? el.value : el.checked).length;
      const percent = (filled / total) * 100;
      progressBar.style.width = percent + '%';
    });

    // Pop-up pesan
    function showPopup(message) {
      popup.textContent = message;
      popup.classList.add('show');
      setTimeout(() => popup.classList.remove('show'), 3000);
    }

    // Submit handler
    form.addEventListener('submit', function(event) {
      event.preventDefault();

      const nama = document.getElementById('nama').value;
      const email = document.getElementById('email').value;
      const tanggal = document.getElementById('tanggal').value;
      const gender = document.querySelector('input[name="gender"]:checked').value;

      const row = document.createElement('tr');
      row.innerHTML = `
        <td>${nama}</td>
        <td>${email}</td>
        <td>${tanggal}</td>
        <td>${gender}</td>
      `;
      tableBody.appendChild(row);
      form.reset();
      progressBar.style.width = '0%';
      showPopup("Registrasi Berhasil!");
    });
  </script>
</body>
</html>
